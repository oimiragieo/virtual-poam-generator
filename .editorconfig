# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black default

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Markdown uses trailing spaces for line breaks
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_style = space
indent_size = 4

# XML files (for .nessus format)
[*.xml]
indent_style = space
indent_size = 2

# HTML templates
[*.html]
indent_style = space
indent_size = 2

# Git config files
[.gitignore]
indent_style = space
indent_size = 2

# Package files
[{package.json,*.lock}]
indent_style = space
indent_size = 2
